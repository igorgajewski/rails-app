<h1>Board Details</h1>

<table class="table table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td><%= @board["id"] %></td>
    </tr>

    <tr>
      <th>Name</th>
      <td><%= @board["name"] %></td>
    </tr>

    <tr>
      <th>Workspace ID</th>
      <td><%= @board.dig("workspace", "id") %></td>
    </tr>

    <tr>
      <th>Workspace Name</th>
      <td><%= @board.dig("workspace", "name") %></td>
    </tr>

    <tr>
      <th>Owners</th>
      <td>
        <ul>
          <% @board["owners"].each do |owner| %>
            <li><%= owner["name"] %> (ID: <%= owner["id"] %>)</li>
          <% end %>
        </ul>
      </td>
    </tr>

    <tr>
      <th>Items</th>
      <td>
        <ul>
          <% @board["items_page"]["items"].each do |item| %>
            <li><%= item["name"] %> (ID: <%= item["id"] %>)</li>
          <% end %>
        </ul>
    </tr>
  </tbody>
</table>
<%= link_to "Edit Board", edit_board_path(@board["id"]), class: "btn btn-warning" %>
<%= link_to "Return to Board List", boards_path, class: "btn btn-primary" %>
