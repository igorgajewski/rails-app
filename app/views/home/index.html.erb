<h1>All Boards</h1>

<table>
  <thead>
    <tr>
      <th>Board Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board['name'] %></td>
        <td>
          <%= link_to 'Rename', rename_board_path(board['id']) %>
          <%= link_to 'Delete', board_path(board['id']), method: :delete, data: { confirm: 'Are you sure you want to delete this board?' } %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create New Board', new_board_path %>
