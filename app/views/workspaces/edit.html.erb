<h1>Edit Workspace</h1>

<%= form_with url: workspace_path(@workspace["id"]), method: :patch, local: true do |form| %>
    <div class="mb-3">
        <%= form.label :name, "Workspace Name", class: "form-label" %>
        <%= form.text_field :name, value: @workspace["name"], required: true, class: "form-control" %>
    </div>

    <%= form.submit "Update Workspace", class: "btn btn-success" %>
<% end %>

<%= link_to "Return to Workspace Details", workspace_path(@workspace["id"]), class: "btn btn-secondary mt-3" %>
